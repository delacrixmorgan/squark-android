<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/league_spartan</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionBarTheme">@style/SquarkAppbar</item>
        <item name="android:listDivider">@drawable/bg_border_grey</item>
    </style>

    <style name="SquarkAppbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="contentInsetLeft">16dp</item>
        <item name="contentInsetStart">16dp</item>
    </style>

    <style name="LargeTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Title1" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Title2" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title3" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Callout" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Footnote" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Caption1" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption2" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
